{
  "name": "baffle",
  "version": "0.3.4",
  "description": "A tiny javascript library for obfuscating and revealing text in DOM elements.",
  "main": "dist/baffle.min.js",
  "scripts": {
    "start": "webpack -wp",
    "build": "BABEL_ENV=production webpack -p",
    "lint": "eslint src/**/*.js",
    "test": "nyc ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/camwiegert/baffle.git"
  },
  "homepage": "https://camwiegert.github.io/baffle",
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      [
        "transform-es2015-classes",
        {
          "loose": true
        }
      ]
    ],
    "env": {
      "development": {
          "sourceMaps": "inline"
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    }
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ]
  },
  "author": "Cam Wiegert <cam@camwiegert.com>",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "eslint": "^3.1.1",
    "jsdom": "^9.4.1",
    "nyc": "^7.1.0",
    "stable-fn": "^1.0.0",
    "webpack": "^1.13.1"
  }
}
